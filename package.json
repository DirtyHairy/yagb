{
    "name": "yagb",
    "version": "0.0.1",
    "author": "Christian Speckner <cnspeckn@googlemail.com>",
    "license": "MIT",
    "private": true,
    "workspaces": ["yagb-core", "yagb-cli", "yagb-pwa"],
    "scripts": {
        "test": "yarn workspaces run test",
        "lint": "yarn workspaces run lint",
        "prettier": "yarn workspaces run prettier",
        "start:cli": "yarn --cwd yagb-cli start",
        "build:cli": "yarn --cwd yagb-cli build",
        "start:pwa": "yarn --cwd yagb-pwa start"
    },
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "singleQuote": true,
        "parser": "typescript"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "eslint",
            "parser": "typescript"
        }
    }
}
