{
    "name": "yagb",
    "version": "0.0.1",
    "main": "index.js",
    "author": "Christian Speckner <cnspeckn@googlemail.com>",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^27.4.1",
        "@types/jquery": "^3.5.14",
        "@typescript-eslint/eslint-plugin": "^5.17.0",
        "@typescript-eslint/parser": "^5.17.0",
        "copy-webpack-plugin": "^10.2.4",
        "css-loader": "^6.7.1",
        "eslint": "^8.12.0",
        "eslint-webpack-plugin": "^3.1.1",
        "import-sort-style-eslint": "^6.0.0",
        "jest": "^27.5.1",
        "jest-html-reporter": "^3.4.2",
        "jquery": "^3.6.0",
        "jquery.terminal": "^2.32.1",
        "microevent.ts": "^0.2.1",
        "mini-css-extract-plugin": "^2.6.0",
        "prettier": "^2.6.2",
        "prettier-plugin-import-sort": "^0.0.7",
        "ts-jest": "^27.1.4",
        "ts-loader": "^9.2.8",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3",
        "webpack": "^5.70.0",
        "webpack-cli": "^4.9.2",
        "webpack-dev-server": "^4.7.4"
    },
    "scripts": {
        "build": "webpack --mode production -c webpack.config.js",
        "start": "webpack serve --mode development -c webpack.config.js",
        "test": "jest",
        "prettier": "npx prettier --config package.json -w '{spec,src}/**/*.ts'",
        "matrix": "ts-node -P ./tsconfig.node.json ./bin/matrix.ts"
    },
    "eslintConfig": {
        "ignorePatterns": [
            "webpack.config.js"
        ],
        "root": true,
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "rules": {
            "eqeqeq": "error",
            "no-empty-function": "off",
            "@typescript-eslint/no-empty-function": "off",
            "@typescript-eslint/no-empty-interface": "off"
        }
    },
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "singleQuote": true,
        "parser": "typescript"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "eslint",
            "parser": "typescript"
        }
    },
    "dependencies": {
        "ts-node": "^10.7.0"
    }
}
